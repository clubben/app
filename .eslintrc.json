{
  "extends": [
    "universe/native",
    "universe/shared/typescript-analysis"
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.d.ts"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "rules": {
    "node/handle-callback-err": "off"
  },
  "ignorePatterns": [
    "node_modules"
  ]
}